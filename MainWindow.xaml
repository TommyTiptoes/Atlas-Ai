<Window x:Class="AtlasAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:AtlasAI.Converters"
        Title="Atlas AI" Height="200" Width="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Icon="atlas.ico">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#FF16213e"/>
            <Setter Property="Foreground" Value="#FFf1f5f9"/>
            <Setter Property="BorderBrush" Value="#FF22d3ee"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF1a2538"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FF67e8f9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF0c1420"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Floating Avatar Mode (default) -->
        <Border x:Name="AvatarContainer" 
                Background="#FF1a1a2e" 
                CornerRadius="100" 
                Width="180" Height="180"
                BorderBrush="#FF6366f1" 
                BorderThickness="3"
                MouseLeftButtonDown="Avatar_MouseLeftButtonDown"
                MouseRightButtonDown="Avatar_MouseRightButtonDown"
                Visibility="{Binding IsShellMode, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse, FallbackValue=Visible}">
            <Grid>
                <!-- Butler Avatar - Placeholder until Unreal Engine avatars are ready -->
                <Ellipse x:Name="AvatarVisual" 
                        Fill="#FF16213e" 
                        Width="150" Height="150"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
                <Canvas Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Butler silhouette - formal/professional look -->
                    <!-- Head -->
                    <Ellipse Fill="#FFd4a574" Width="50" Height="55" Canvas.Left="50" Canvas.Top="20"/>
                    <!-- Hair (slicked back) -->
                    <Ellipse Fill="#FF2d2d2d" Width="48" Height="20" Canvas.Left="51" Canvas.Top="18"/>
                    <!-- Eyes -->
                    <Ellipse Fill="#FF1a1a1a" Width="8" Height="8" Canvas.Left="60" Canvas.Top="42"/>
                    <Ellipse Fill="#FF1a1a1a" Width="8" Height="8" Canvas.Left="82" Canvas.Top="42"/>
                    <!-- Eyebrows (distinguished) -->
                    <Line Stroke="#FF2d2d2d" StrokeThickness="2" X1="58" Y1="38" X2="70" Y2="36"/>
                    <Line Stroke="#FF2d2d2d" StrokeThickness="2" X1="80" Y1="36" X2="92" Y2="38"/>
                    <!-- Nose -->
                    <Line Stroke="#FFc49a6c" StrokeThickness="2" X1="75" Y1="45" X2="75" Y2="55"/>
                    <!-- Subtle smile -->
                    <Path Stroke="#FFa67c52" StrokeThickness="2" Data="M 65 62 Q 75 68 85 62"/>
                    <!-- Bow tie -->
                    <Polygon Fill="#FF1a1a1a" Points="65,78 75,82 85,78 85,86 75,82 65,86"/>
                    <!-- Suit collar -->
                    <Polygon Fill="#FF1a1a1a" Points="50,85 65,78 75,95 50,120"/>
                    <Polygon Fill="#FF1a1a1a" Points="100,85 85,78 75,95 100,120"/>
                    <!-- White shirt visible -->
                    <Polygon Fill="#FFf5f5f5" Points="68,82 75,95 82,82"/>
                </Canvas>
                <!-- Status indicator -->
                <Ellipse Fill="#FF10b981" Width="20" Height="20"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
            </Grid>
        </Border>
        
        <!-- Shell Mode (full application window) -->
        <Grid x:Name="ShellContainer" 
              Background="#FF050508"
              Visibility="{Binding IsShellMode, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Navigation Bar -->
            <Border Grid.Row="0" Background="#FF0c0c12" BorderBrush="#FF22d3ee" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo/Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0" VerticalAlignment="Center">
                        <TextBlock Text="Atlas AI" FontSize="20" FontWeight="Bold" Foreground="#FF22d3ee" Margin="0,0,12,0"/>
                        <TextBlock Text="Shell" FontSize="14" Foreground="#FF94a3b8" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Navigation Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="NavChatBtn" Content="ðŸ’¬ Chat" Style="{StaticResource NavButton}" Click="NavChat_Click"/>
                        <Button x:Name="NavSettingsBtn" Content="âš™ï¸ Settings" Style="{StaticResource NavButton}" Click="NavSettings_Click"/>
                        <Button x:Name="NavSystemBtn" Content="ðŸ›¡ï¸ System Control" Style="{StaticResource NavButton}" Click="NavSystem_Click"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0">
                        <Button x:Name="MinimizeBtn" Content="âˆ’" Width="40" Height="40" Click="Minimize_Click"
                                Background="Transparent" Foreground="#FF94a3b8" BorderThickness="0" FontSize="18"/>
                        <Button x:Name="CloseBtn" Content="Ã—" Width="40" Height="40" Click="Close_Click"
                                Background="Transparent" Foreground="#FF94a3b8" BorderThickness="0" FontSize="22"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <ContentControl x:Name="ShellContent" Grid.Row="1" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
