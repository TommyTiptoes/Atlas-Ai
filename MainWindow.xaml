<Window x:Class="MinimalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas AI" Height="200" Width="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Icon="atlas.ico">
    
    <Grid>
        <Border x:Name="AvatarContainer" 
                Background="#FF1a1a2e" 
                CornerRadius="100" 
                Width="180" Height="180"
                BorderBrush="#FF6366f1" 
                BorderThickness="3"
                MouseLeftButtonDown="Avatar_MouseLeftButtonDown"
                MouseRightButtonDown="Avatar_MouseRightButtonDown">
            <Grid>
                <!-- Butler Avatar - Placeholder until Unreal Engine avatars are ready -->
                <Ellipse x:Name="AvatarVisual" 
                        Fill="#FF16213e" 
                        Width="150" Height="150"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
                <Canvas Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Butler silhouette - formal/professional look -->
                    <!-- Head -->
                    <Ellipse Fill="#FFd4a574" Width="50" Height="55" Canvas.Left="50" Canvas.Top="20"/>
                    <!-- Hair (slicked back) -->
                    <Ellipse Fill="#FF2d2d2d" Width="48" Height="20" Canvas.Left="51" Canvas.Top="18"/>
                    <!-- Eyes -->
                    <Ellipse Fill="#FF1a1a1a" Width="8" Height="8" Canvas.Left="60" Canvas.Top="42"/>
                    <Ellipse Fill="#FF1a1a1a" Width="8" Height="8" Canvas.Left="82" Canvas.Top="42"/>
                    <!-- Eyebrows (distinguished) -->
                    <Line Stroke="#FF2d2d2d" StrokeThickness="2" X1="58" Y1="38" X2="70" Y2="36"/>
                    <Line Stroke="#FF2d2d2d" StrokeThickness="2" X1="80" Y1="36" X2="92" Y2="38"/>
                    <!-- Nose -->
                    <Line Stroke="#FFc49a6c" StrokeThickness="2" X1="75" Y1="45" X2="75" Y2="55"/>
                    <!-- Subtle smile -->
                    <Path Stroke="#FFa67c52" StrokeThickness="2" Data="M 65 62 Q 75 68 85 62"/>
                    <!-- Bow tie -->
                    <Polygon Fill="#FF1a1a1a" Points="65,78 75,82 85,78 85,86 75,82 65,86"/>
                    <!-- Suit collar -->
                    <Polygon Fill="#FF1a1a1a" Points="50,85 65,78 75,95 50,120"/>
                    <Polygon Fill="#FF1a1a1a" Points="100,85 85,78 75,95 100,120"/>
                    <!-- White shirt visible -->
                    <Polygon Fill="#FFf5f5f5" Points="68,82 75,95 82,82"/>
                </Canvas>
                <!-- Status indicator -->
                <Ellipse Fill="#FF10b981" Width="20" Height="20"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
