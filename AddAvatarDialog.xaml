<Window x:Class="MinimalApp.AddAvatarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ready Player Me Avatar" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="Pill3DBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#454570" Offset="0"/>
                                    <GradientStop Color="#353555" Offset="0.5"/>
                                    <GradientStop Color="#2a2a45" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3" Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#7c7ff7" Offset="0"/>
                                            <GradientStop Color="#6366f1" Offset="0.5"/>
                                            <GradientStop Color="#5558e8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="ðŸŽ­ Add Custom Avatar" FontSize="24" FontWeight="Bold" Foreground="#f0f0f0"/>
            <TextBlock Text="Add your Ready Player Me avatar URL" FontSize="14" Foreground="#a0a0b0" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Avatar Name -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Avatar Name" FontWeight="SemiBold" Foreground="#f0f0f0" Margin="0,0,0,8"/>
                <TextBox x:Name="NameTextBox" Background="#252542" Foreground="#f0f0f0" BorderBrush="#404060" 
                         BorderThickness="1" Padding="12,10" FontSize="14" Text="My Avatar"/>
            </StackPanel>
            
            <!-- Avatar URL -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Ready Player Me URL" FontWeight="SemiBold" Foreground="#f0f0f0" Margin="0,0,0,8"/>
                <TextBox x:Name="UrlTextBox" Background="#252542" Foreground="#f0f0f0" BorderBrush="#404060" 
                         BorderThickness="1" Padding="12,10" FontSize="14" TextChanged="UrlTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="https://models.readyplayer.me/your-avatar-id.glb" 
                                                               Foreground="#606080" Margin="12,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock x:Name="UrlValidationText" FontSize="12" Margin="0,5,0,0" Visibility="Collapsed"/>
            </StackPanel>
            
            <!-- Instructions -->
            <Border Background="#252542" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ How to get your Ready Player Me URL:" FontWeight="SemiBold" Foreground="#6366f1" Margin="0,0,0,10"/>
                    <TextBlock Text="1. Go to readyplayer.me and create your avatar" Foreground="#a0a0b0" Margin="0,0,0,5"/>
                    <TextBlock Text="2. After creation, right-click your avatar and select 'Copy GLB URL'" Foreground="#a0a0b0" Margin="0,0,0,5"/>
                    <TextBlock Text="3. Paste the URL above (should end with .glb)" Foreground="#a0a0b0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button Content="Cancel" Style="{StaticResource Pill3DBtn}" Click="Cancel_Click" Margin="0,0,15,0"/>
            <Button x:Name="AddButton" Content="Add Avatar" Style="{StaticResource Pill3DBtn}" Click="Add_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>