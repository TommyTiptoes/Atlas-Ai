<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════════
         ATLAS AI - TYPOGRAPHY SYSTEM
         Clean, modern typography using Segoe UI Variable with fallbacks
    ═══════════════════════════════════════════════════════════════════════════ -->
    
    <!-- ─────────────────────────────────────────────────────────────────────────
         FONT FAMILIES
    ───────────────────────────────────────────────────────────────────────── -->
    <FontFamily x:Key="AtlasFontPrimary">Segoe UI Variable, Segoe UI, Arial</FontFamily>
    <FontFamily x:Key="AtlasFontMono">Cascadia Code, Consolas, Courier New</FontFamily>
    <FontFamily x:Key="AtlasFontIcon">Segoe Fluent Icons, Segoe MDL2 Assets</FontFamily>
    
    <!-- ─────────────────────────────────────────────────────────────────────────
         HEADING STYLES
    ───────────────────────────────────────────────────────────────────────── -->
    
    <!-- H1 - App Title -->
    <Style x:Key="AtlasH1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    </Style>
    
    <!-- H2 - Section Headers -->
    <Style x:Key="AtlasH2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
    </Style>
    
    <!-- H3 - Subsection Headers -->
    <Style x:Key="AtlasH3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
    </Style>
    
    <!-- ─────────────────────────────────────────────────────────────────────────
         BODY TEXT STYLES
    ───────────────────────────────────────────────────────────────────────── -->
    
    <!-- Body - Primary text -->
    <Style x:Key="AtlasBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <!-- Body Secondary - Muted text -->
    <Style x:Key="AtlasBodySecondary" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextSecondaryBrush}"/>
    </Style>
    
    <!-- Caption - Small labels -->
    <Style x:Key="AtlasCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextMutedBrush}"/>
    </Style>
    
    <!-- Label - Form labels -->
    <Style x:Key="AtlasLabel" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextSecondaryBrush}"/>
    </Style>
    
    <!-- ─────────────────────────────────────────────────────────────────────────
         SPECIAL TEXT STYLES
    ───────────────────────────────────────────────────────────────────────── -->
    
    <!-- Status Text - Online/Offline indicators -->
    <Style x:Key="AtlasStatus" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasSuccessBrush}"/>
    </Style>
    
    <!-- Accent Text - Highlighted info -->
    <Style x:Key="AtlasAccentText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasCyanBrush}"/>
    </Style>
    
    <!-- Code Text - Monospace for code snippets -->
    <Style x:Key="AtlasCode" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontMono}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource AtlasSurfaceBrush}"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>
    
    <!-- Button Text -->
    <Style x:Key="AtlasButtonText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
    </Style>
    
    <!-- Chip/Badge Text -->
    <Style x:Key="AtlasChipText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- Toast Text -->
    <Style x:Key="AtlasToastText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
    </Style>
    
    <!-- ─────────────────────────────────────────────────────────────────────────
         MESSAGE BUBBLE TEXT STYLES
    ───────────────────────────────────────────────────────────────────────── -->
    
    <!-- User Message -->
    <Style x:Key="AtlasUserMessage" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <!-- Assistant Message -->
    <Style x:Key="AtlasAssistantMessage" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <!-- Message Timestamp -->
    <Style x:Key="AtlasTimestamp" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AtlasFontPrimary}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource AtlasTextMutedBrush}"/>
    </Style>
    
</ResourceDictionary>