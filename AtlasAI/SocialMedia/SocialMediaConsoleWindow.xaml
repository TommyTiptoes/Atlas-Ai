<Window x:Class="MinimalApp.SocialMedia.SocialMediaConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Media Console" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- Dark theme colors matching Atlas AI -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
        <SolidColorBrush x:Key="CardBrush" Color="#161B22"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5865F2"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E6EDF3"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#7D858F"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        
        <!-- Button Style -->
        <Style x:Key="ConsoleButton" TargetType="Button">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30363D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ConsoleButton}">
            <Setter Property="Background" Value="#5865F2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4752C4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Tab Button -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7D858F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,2" BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#E6EDF3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#161B22" CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“±" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Social Media Console" Foreground="#E6EDF3" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <Button Content="â”€" Width="36" Height="36" Style="{StaticResource ConsoleButton}" 
                                Click="Minimize_Click" BorderThickness="0"/>
                        <Button Content="âœ•" Width="36" Height="36" Style="{StaticResource ConsoleButton}" 
                                Click="Close_Click" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Tab Navigation -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" Margin="8,0">
                    <Button x:Name="TabCampaigns" Content="ðŸ“Š Campaigns" Style="{StaticResource TabButton}" 
                            Click="Tab_Click" Tag="campaigns"/>
                    <Button x:Name="TabContent" Content="ðŸ“ Content Library" Style="{StaticResource TabButton}" 
                            Click="Tab_Click" Tag="content"/>
                    <Button x:Name="TabScheduler" Content="ðŸ“… Scheduler" Style="{StaticResource TabButton}" 
                            Click="Tab_Click" Tag="scheduler"/>
                    <Button x:Name="TabBrands" Content="ðŸ·ï¸ Brands" Style="{StaticResource TabButton}" 
                            Click="Tab_Click" Tag="brands"/>
                    <Button x:Name="TabGenerate" Content="âœ¨ Generate" Style="{StaticResource TabButton}" 
                            Click="Tab_Click" Tag="generate"/>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="2" Margin="16">
                <!-- Campaigns Panel -->
                <Grid x:Name="CampaignsPanel" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="+ New Campaign" Style="{StaticResource PrimaryButton}" Click="NewCampaign_Click"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CampaignsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#161B22" CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" Foreground="#E6EDF3" FontSize="15" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#7D858F" FontSize="12" Margin="0,4,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <Border Background="#21262D" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Goal}" Foreground="#7D858F" FontSize="11"/>
                                                    </Border>
                                                    <Border Background="#21262D" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Text="{Binding Status}" Foreground="#10B981" FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button Content="View" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="ViewCampaign_Click" Margin="0,0,8,0"/>
                                                <Button Content="â–¶" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="ActivateCampaign_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Content Library Panel -->
                <Grid x:Name="ContentPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ComboBox x:Name="ContentStatusFilter" Width="150" Margin="0,0,8,0" SelectionChanged="ContentFilter_Changed">
                            <ComboBoxItem Content="All Content" IsSelected="True"/>
                            <ComboBoxItem Content="Drafts"/>
                            <ComboBoxItem Content="Scheduled"/>
                            <ComboBoxItem Content="Published"/>
                        </ComboBox>
                        <Button Content="+ Create Content" Style="{StaticResource PrimaryButton}" Click="CreateContent_Click"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ContentList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#161B22" CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" Foreground="#E6EDF3" FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Caption}" Foreground="#7D858F" FontSize="12" 
                                                           TextTrimming="CharacterEllipsis" MaxWidth="500" Margin="0,4,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <Border Background="#21262D" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Type}" Foreground="#7D858F" FontSize="11"/>
                                                    </Border>
                                                    <Border Background="#21262D" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Text="{Binding Status}" Foreground="#5865F2" FontSize="11"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button Content="Edit" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="EditContent_Click" Margin="0,0,8,0"/>
                                                <Button Content="Schedule" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="ScheduleContent_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Scheduler Panel -->
                <Grid x:Name="SchedulerPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Upcoming Posts" Foreground="#E6EDF3" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ScheduleList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#161B22" CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Background="#21262D" CornerRadius="6" Padding="12,8" Margin="0,0,16,0">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ScheduledTime, StringFormat='{}{0:MMM dd}'}" 
                                                               Foreground="#E6EDF3" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding ScheduledTime, StringFormat='{}{0:HH:mm}'}" 
                                                               Foreground="#7D858F" FontSize="12" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Platform}" Foreground="#E6EDF3" FontSize="14"/>
                                                <TextBlock Text="{Binding Status}" Foreground="#7D858F" FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="âœ“ Approve" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="ApproveSchedule_Click" Margin="0,0,8,0"/>
                                                <Button Content="âœ•" Style="{StaticResource ConsoleButton}" 
                                                        Tag="{Binding Id}" Click="CancelSchedule_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Brands Panel -->
                <Grid x:Name="BrandsPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Content="+ Add Brand" Style="{StaticResource PrimaryButton}" Click="AddBrand_Click" 
                            HorizontalAlignment="Left" Margin="0,0,0,16"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="BrandsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#161B22" CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" Foreground="#E6EDF3" FontSize="15" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#7D858F" FontSize="12" Margin="0,4,0,0"/>
                                                <TextBlock Text="{Binding Industry}" Foreground="#5865F2" FontSize="11" Margin="0,4,0,0"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Edit" Style="{StaticResource ConsoleButton}" 
                                                    Tag="{Binding Id}" Click="EditBrand_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Generate Panel -->
                <Grid x:Name="GeneratePanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Generation Options -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Generate Content" Foreground="#E6EDF3" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,8,0">
                                <TextBlock Text="Content Type" Foreground="#7D858F" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox x:Name="GenerateType" SelectedIndex="0">
                                    <ComboBoxItem Content="Post"/>
                                    <ComboBoxItem Content="Video Script"/>
                                    <ComboBoxItem Content="Ad Copy"/>
                                    <ComboBoxItem Content="Hashtags"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Tone" Foreground="#7D858F" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox x:Name="GenerateTone" SelectedIndex="0">
                                    <ComboBoxItem Content="Professional"/>
                                    <ComboBoxItem Content="Friendly"/>
                                    <ComboBoxItem Content="Viral"/>
                                    <ComboBoxItem Content="Casual"/>
                                    <ComboBoxItem Content="Educational"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="Topic / Description" Foreground="#7D858F" FontSize="12" Margin="0,12,0,4"/>
                        <TextBox x:Name="GenerateTopic" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D" Padding="8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <CheckBox x:Name="GenerateForTikTok" Content="TikTok" Foreground="#E6EDF3" Margin="0,0,16,0"/>
                            <CheckBox x:Name="GenerateForInstagram" Content="Instagram" Foreground="#E6EDF3" Margin="0,0,16,0" IsChecked="True"/>
                            <CheckBox x:Name="GenerateForFacebook" Content="Facebook" Foreground="#E6EDF3" Margin="0,0,16,0"/>
                            <CheckBox x:Name="GenerateForYouTube" Content="YouTube" Foreground="#E6EDF3"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Generated Output -->
                    <Border Grid.Row="1" Background="#161B22" CornerRadius="8" Padding="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="GeneratedOutput" IsReadOnly="True" TextWrapping="Wrap"
                                     Background="Transparent" Foreground="#E6EDF3" BorderThickness="0"
                                     Text="Generated content will appear here..."/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Generate Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Copy" Style="{StaticResource ConsoleButton}" Click="CopyGenerated_Click" Margin="0,0,8,0"/>
                        <Button Content="Save as Draft" Style="{StaticResource ConsoleButton}" Click="SaveAsDraft_Click" Margin="0,0,8,0"/>
                        <Button Content="âœ¨ Generate" Style="{StaticResource PrimaryButton}" Click="Generate_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
