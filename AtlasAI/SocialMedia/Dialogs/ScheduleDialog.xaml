<Window x:Class="MinimalApp.SocialMedia.ScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schedule Post" Height="300" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize">
    
    <Border Background="#0D1117" CornerRadius="12" BorderBrush="#30363D" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Schedule Post" Foreground="#E6EDF3" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
            
            <StackPanel Grid.Row="1">
                <TextBlock Text="Platform" Foreground="#7D858F" FontSize="12" Margin="0,0,0,4"/>
                <ComboBox x:Name="PlatformBox" SelectedIndex="1" Margin="0,0,0,12">
                    <ComboBoxItem Content="TikTok"/>
                    <ComboBoxItem Content="Instagram"/>
                    <ComboBoxItem Content="Facebook"/>
                    <ComboBoxItem Content="YouTube"/>
                </ComboBox>
                
                <TextBlock Text="Date" Foreground="#7D858F" FontSize="12" Margin="0,0,0,4"/>
                <DatePicker x:Name="DatePicker" SelectedDate="{x:Static sys:DateTime.Today}" Margin="0,0,0,12"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                
                <TextBlock Text="Time" Foreground="#7D858F" FontSize="12" Margin="0,0,0,4"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="HourBox" Width="60" SelectedIndex="12">
                        <ComboBoxItem Content="00"/><ComboBoxItem Content="01"/><ComboBoxItem Content="02"/>
                        <ComboBoxItem Content="03"/><ComboBoxItem Content="04"/><ComboBoxItem Content="05"/>
                        <ComboBoxItem Content="06"/><ComboBoxItem Content="07"/><ComboBoxItem Content="08"/>
                        <ComboBoxItem Content="09"/><ComboBoxItem Content="10"/><ComboBoxItem Content="11"/>
                        <ComboBoxItem Content="12"/><ComboBoxItem Content="13"/><ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="15"/><ComboBoxItem Content="16"/><ComboBoxItem Content="17"/>
                        <ComboBoxItem Content="18"/><ComboBoxItem Content="19"/><ComboBoxItem Content="20"/>
                        <ComboBoxItem Content="21"/><ComboBoxItem Content="22"/><ComboBoxItem Content="23"/>
                    </ComboBox>
                    <TextBlock Text=":" Foreground="#E6EDF3" VerticalAlignment="Center" Margin="4,0"/>
                    <ComboBox x:Name="MinuteBox" Width="60" SelectedIndex="0">
                        <ComboBoxItem Content="00"/><ComboBoxItem Content="15"/>
                        <ComboBoxItem Content="30"/><ComboBoxItem Content="45"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Padding="16,8" Margin="0,0,8,0" Click="Cancel_Click"
                        Background="#21262D" Foreground="#E6EDF3" BorderBrush="#30363D"/>
                <Button Content="Schedule" Padding="16,8" Click="Schedule_Click"
                        Background="#5865F2" Foreground="#E6EDF3" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
