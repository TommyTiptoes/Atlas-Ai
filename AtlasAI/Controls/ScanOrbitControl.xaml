                    Canvas.Left="176" Canvas.Top="20"
                    MouseLeftButtonDown="HddScan_Click" ToolTip="Scan Hard Drives">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#4022d3ee" Offset="0"/>
                        <GradientStop Color="#2022d3ee" Offset="0.6"/>
                        <GradientStop Color="#10000000" Offset="1"/>
