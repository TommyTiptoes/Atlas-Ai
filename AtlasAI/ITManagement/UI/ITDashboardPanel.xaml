<UserControl x:Class="AtlasAI.ITManagement.UI.ITDashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1a1a2e">
    
    <UserControl.Resources>
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="MetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="MetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#00d4ff"/>
            <Setter Property="Margin" Value="10,15,10,10"/>
        </Style>
        
        <Style x:Key="IssueItem" TargetType="Border">
            <Setter Property="Background" Value="#2a2a4a"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                
                <!-- Header -->
                <TextBlock Text="ðŸ–¥ï¸ IT Management Dashboard" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="White" Margin="10,5,10,15"/>
                
                <!-- System Health Cards -->
                <UniformGrid Columns="4" Margin="5">
                    <!-- CPU -->
                    <Border Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’»" FontSize="20"/>
                            <TextBlock x:Name="CpuValue" Text="0%" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="CPU Usage" Style="{StaticResource MetricLabel}"/>
                            <ProgressBar x:Name="CpuBar" Height="4" Margin="0,8,0,0" 
                                        Background="#333" Foreground="#00d4ff"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- RAM -->
                    <Border Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ§ " FontSize="20"/>
                            <TextBlock x:Name="RamValue" Text="0%" Style="{StaticResource MetricValue}"/>
                            <TextBlock x:Name="RamDetails" Text="0 / 0 GB" Style="{StaticResource MetricLabel}"/>
                            <ProgressBar x:Name="RamBar" Height="4" Margin="0,8,0,0" 
                                        Background="#333" Foreground="#ff6b6b"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Disk -->
                    <Border Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¾" FontSize="20"/>
                            <TextBlock x:Name="DiskValue" Text="0%" Style="{StaticResource MetricValue}"/>
                            <TextBlock x:Name="DiskDetails" Text="0 GB free" Style="{StaticResource MetricLabel}"/>
                            <ProgressBar x:Name="DiskBar" Height="4" Margin="0,8,0,0" 
                                        Background="#333" Foreground="#22d3ee"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Uptime -->
                    <Border Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <TextBlock Text="â±ï¸" FontSize="20"/>
                            <TextBlock x:Name="UptimeValue" Text="0h" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="System Uptime" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Active Issues Section -->
                <TextBlock Text="âš ï¸ ACTIVE ISSUES" Style="{StaticResource SectionHeader}"/>
                <Border Background="#252542" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel x:Name="IssuesPanel">
                        <TextBlock x:Name="NoIssuesText" Text="âœ… No issues detected" 
                                   Foreground="#4ade80" FontSize="14" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions -->
                <TextBlock Text="âš¡ QUICK ACTIONS" Style="{StaticResource SectionHeader}"/>
                <WrapPanel Margin="5">
                    <Button x:Name="BtnCleanTemp" Content="ðŸ§¹ Clean Temp" 
                            Click="BtnCleanTemp_Click" Margin="5" Padding="15,8"/>
                    <Button x:Name="BtnScanNetwork" Content="ðŸŒ Scan Network" 
                            Click="BtnScanNetwork_Click" Margin="5" Padding="15,8"/>
                    <Button x:Name="BtnCheckIssues" Content="ðŸ” Check Issues" 
                            Click="BtnCheckIssues_Click" Margin="5" Padding="15,8"/>
                    <Button x:Name="BtnSpeedTest" Content="ðŸ“¶ Speed Test" 
                            Click="BtnSpeedTest_Click" Margin="5" Padding="15,8"/>
                    <Button x:Name="BtnVirusScan" Content="ðŸ›¡ï¸ Virus Scan" 
                            Click="BtnVirusScan_Click" Margin="5" Padding="15,8"/>
                    <Button x:Name="BtnFullReport" Content="ðŸ“Š Full Report" 
                            Click="BtnFullReport_Click" Margin="5" Padding="15,8"/>
                </WrapPanel>
                
                <!-- Network Devices -->
                <TextBlock Text="ðŸŒ NETWORK DEVICES" Style="{StaticResource SectionHeader}"/>
                <Border Background="#252542" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel x:Name="NetworkPanel">
                        <TextBlock x:Name="NoDevicesText" Text="Click 'Scan Network' to discover devices" 
                                   Foreground="#888" FontSize="12" Margin="5"/>
                    </StackPanel>
                </Border>
                
                <!-- Recent Activity -->
                <TextBlock Text="ðŸ“‹ RECENT ACTIVITY" Style="{StaticResource SectionHeader}"/>
                <Border Background="#252542" CornerRadius="8" Padding="10" Margin="5" MaxHeight="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ActivityPanel">
                            <TextBlock Text="No recent activity" Foreground="#888" FontSize="12" Margin="5"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
