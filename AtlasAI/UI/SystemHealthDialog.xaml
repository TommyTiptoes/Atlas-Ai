<Window x:Class="AtlasAI.UI.SystemHealthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Health" Height="500" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize">
    
    <Border Background="#0c0c12" BorderBrush="#22d3ee30" BorderThickness="1" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#10ffffff" Padding="20,16" CornerRadius="12,12,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="40" Height="40" CornerRadius="8" Margin="0,0,12,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#22d3ee" Offset="0"/>
                                    <GradientStop Color="#8b5cf6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="ðŸ’»" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="SYSTEM HEALTH" FontSize="14" FontWeight="SemiBold" Foreground="#f1f5f9"/>
                            <TextBlock x:Name="StatusText" Text="Scanning..." FontSize="11" Foreground="#22c55e"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="âœ•" Click="Close_Click" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Background="Transparent" Foreground="#64748b" BorderThickness="0" 
                            Width="28" Height="28" Cursor="Hand" FontSize="12"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    
                    <!-- CPU Card -->
                    <Border Background="#08ffffff" BorderBrush="#15ffffff" BorderThickness="1" 
                            CornerRadius="10" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="CPU" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8"/>
                            <TextBlock x:Name="CpuValue" Grid.Column="1" Text="0%" FontSize="20" 
                                       FontWeight="Bold" Foreground="#22d3ee" FontFamily="Consolas"/>
                            
                            <ProgressBar x:Name="CpuBar" Grid.Row="1" Grid.ColumnSpan="2" 
                                         Value="0" Maximum="100" Height="6" Margin="0,10,0,8"
                                         Background="#10ffffff" Foreground="#22d3ee" BorderThickness="0"/>
                            
                            <TextBlock x:Name="CpuDetails" Grid.Row="2" Grid.ColumnSpan="2" 
                                       Text="Loading..." FontSize="10" Foreground="#64748b"/>
                        </Grid>
                    </Border>
                    
                    <!-- Memory Card -->
                    <Border Background="#08ffffff" BorderBrush="#15ffffff" BorderThickness="1" 
                            CornerRadius="10" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="MEMORY" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8"/>
                            <TextBlock x:Name="MemValue" Grid.Column="1" Text="0%" FontSize="20" 
                                       FontWeight="Bold" Foreground="#8b5cf6" FontFamily="Consolas"/>
                            
                            <ProgressBar x:Name="MemBar" Grid.Row="1" Grid.ColumnSpan="2" 
                                         Value="0" Maximum="100" Height="6" Margin="0,10,0,8"
                                         Background="#10ffffff" Foreground="#8b5cf6" BorderThickness="0"/>
                            
                            <TextBlock x:Name="MemDetails" Grid.Row="2" Grid.ColumnSpan="2" 
                                       Text="Loading..." FontSize="10" Foreground="#64748b"/>
                        </Grid>
                    </Border>
                    
                    <!-- Disk Card -->
                    <Border Background="#08ffffff" BorderBrush="#15ffffff" BorderThickness="1" 
                            CornerRadius="10" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="STORAGE" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8"/>
                            <TextBlock x:Name="DiskValue" Grid.Column="1" Text="0%" FontSize="20" 
                                       FontWeight="Bold" Foreground="#2dd4bf" FontFamily="Consolas"/>
                            
                            <ProgressBar x:Name="DiskBar" Grid.Row="1" Grid.ColumnSpan="2" 
                                         Value="0" Maximum="100" Height="6" Margin="0,10,0,8"
                                         Background="#10ffffff" Foreground="#2dd4bf" BorderThickness="0"/>
                            
                            <TextBlock x:Name="DiskDetails" Grid.Row="2" Grid.ColumnSpan="2" 
                                       Text="Loading..." FontSize="10" Foreground="#64748b"/>
                        </Grid>
                    </Border>
                    
                    <!-- Network Card -->
                    <Border Background="#08ffffff" BorderBrush="#15ffffff" BorderThickness="1" 
                            CornerRadius="10" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="NETWORK" FontSize="12" FontWeight="SemiBold" Foreground="#94a3b8"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Ellipse x:Name="NetworkDot" Width="8" Height="8" Fill="#22c55e" Margin="0,0,6,0"/>
                                <TextBlock x:Name="NetworkStatus" Text="Connected" FontSize="12" 
                                           Foreground="#22c55e" FontFamily="Consolas"/>
                            </StackPanel>
                            
                            <TextBlock x:Name="NetworkDetails" Grid.Row="1" Grid.ColumnSpan="2" 
                                       Text="Latency: --ms" FontSize="10" Foreground="#64748b" Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Overall Status -->
                    <Border x:Name="OverallStatusBorder" Background="#1022c55e" BorderBrush="#3022c55e" 
                            BorderThickness="1" CornerRadius="10" Padding="16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="OverallIcon" Text="âœ“" FontSize="18" Foreground="#22c55e" 
                                       Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="OverallText" Text="System Healthy" FontSize="14" 
                                       FontWeight="SemiBold" Foreground="#22c55e" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="#08ffffff" Padding="20,12" CornerRadius="0,0,12,12">
                <Grid>
                    <TextBlock x:Name="LastUpdated" Text="Last updated: --" FontSize="10" 
                               Foreground="#64748b" VerticalAlignment="Center"/>
                    <Button Content="Refresh" Click="Refresh_Click" HorizontalAlignment="Right"
                            Background="#22d3ee" Foreground="#0c0c12" BorderThickness="0"
                            Padding="16,8" Cursor="Hand" FontWeight="SemiBold" FontSize="12"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
