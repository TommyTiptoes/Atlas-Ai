<Window x:Class="AtlasAI.UI.SecurityAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Security Alert"
        Width="550" Height="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="NoResize">
    
    <Border Background="#0a0c14" BorderBrush="{Binding ThreatColor}" BorderThickness="2" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="{Binding ThreatColorValue}" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#12121a" CornerRadius="10,10,0,0" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="SECURITY ALERT" Foreground="#22d3ee" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="New file detected - Review required" Foreground="#64748b" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <!-- Severity Badge -->
                    <Border Background="{Binding ThreatBgColor}" BorderBrush="{Binding ThreatColor}" 
                            BorderThickness="1" CornerRadius="6" Padding="12,6" HorizontalAlignment="Left" Margin="0,0,0,16">
                        <TextBlock Text="{Binding SeverityText}" Foreground="{Binding ThreatColor}" 
                                   FontWeight="SemiBold" FontSize="12"/>
                    </Border>
                    
                    <!-- File Info Card -->
                    <Border Background="#12121a" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="FILE:" Foreground="#64748b" FontSize="10" Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileName}" Foreground="#f1f5f9" 
                                       FontWeight="SemiBold" TextWrapping="Wrap"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="SIZE:" Foreground="#64748b" FontSize="10" Margin="0,8,12,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FileSize}" Foreground="#94a3b8" Margin="0,8,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="TYPE:" Foreground="#64748b" FontSize="10" Margin="0,8,12,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FileType}" Foreground="#94a3b8" Margin="0,8,0,0"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="PUBLISHER:" Foreground="#64748b" FontSize="10" Margin="0,8,12,4"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="{Binding SignedIcon}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding PublisherName}" Foreground="{Binding SignatureColor}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Scan Status -->
                    <Border Background="#0c0c12" CornerRadius="6" Padding="12" Margin="0,0,0,12"
                            Visibility="{Binding ScanningVisibility}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock x:Name="ScanSpinner" Text="â³" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding ScanStatus}" Foreground="#94a3b8" FontSize="12"/>
                            </StackPanel>
                            <ProgressBar Value="{Binding ScanProgress}" Maximum="100" Height="4" 
                                         Background="#1e1e28" Foreground="#22d3ee"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- VirusTotal Results -->
                    <Border Background="#0c0c12" CornerRadius="6" Padding="12" Margin="0,0,0,12"
                            Visibility="{Binding VirusTotalVisibility}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”¬ VirusTotal Scan" Foreground="#94a3b8" FontSize="11" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#1a2e1a" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                    <TextBlock Text="{Binding VTClean}" Foreground="#22c55e" FontSize="11"/>
                                </Border>
                                <Border Background="#2e1a1a" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{Binding VTMalicious}" Foreground="#ef4444" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Bloatware Warning -->
                    <Border Background="#2e2a1a" BorderBrush="#f59e0b" BorderThickness="1" 
                            CornerRadius="6" Padding="12" Margin="0,0,0,12"
                            Visibility="{Binding BloatwareVisibility}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding BloatwareReason}" Foreground="#f59e0b" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Recommendation -->
                    <Border Background="{Binding RecommendationBg}" CornerRadius="6" Padding="12">
                        <TextBlock Text="{Binding Recommendation}" Foreground="#d1d5db" TextWrapping="Wrap" FontSize="12"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="#12121a" CornerRadius="0,0,10,10" Padding="20,16">
                <StackPanel>
                    <TextBlock Text="What would you like to do?" Foreground="#94a3b8" FontSize="12" 
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BlockButton" Margin="4" Padding="20,10" Cursor="Hand"
                                Background="#2e1a1a" Foreground="#ef4444" BorderBrush="#ef4444" BorderThickness="1"
                                Click="OnBlockClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,6,0"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="QuarantineButton" Margin="4" Padding="20,10" Cursor="Hand"
                                Background="#2e2a1a" Foreground="#f59e0b" BorderBrush="#f59e0b" BorderThickness="1"
                                Click="OnQuarantineClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”’" Margin="0,0,6,0"/>
                                <TextBlock Text="Quarantine"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="AllowButton" Margin="4" Padding="20,10" Cursor="Hand"
                                Background="#1a2e1a" Foreground="#22c55e" BorderBrush="#22c55e" BorderThickness="1"
                                Click="OnAllowClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âœ…" Margin="0,0,6,0"/>
                                <TextBlock Text="Allow"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="TrustButton" Margin="4" Padding="20,10" Cursor="Hand"
                                Background="#1a1a2e" Foreground="#3b82f6" BorderBrush="#3b82f6" BorderThickness="1"
                                Visibility="{Binding TrustButtonVisibility}"
                                Click="OnTrustClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â­" Margin="0,0,6,0"/>
                                <TextBlock Text="Trust Publisher"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
