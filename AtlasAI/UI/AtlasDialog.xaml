<Window x:Class="AtlasAI.UI.AtlasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas" Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Border Background="#0c0c12" CornerRadius="12" BorderBrush="#22d3ee30" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#08080c" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="TitleText" Text="Atlas" Foreground="#f1f5f9" FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="16,0,0,0"/>
                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"
                            Width="28" Height="28" Background="Transparent" BorderThickness="0"
                            Foreground="#64748b" FontSize="14" Cursor="Hand" Click="Close_Click"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1" Margin="20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="IconText" Text="ℹ️" FontSize="28" VerticalAlignment="Top"/>
                <TextBlock x:Name="ContentText" Grid.Column="1" Text="Message" Foreground="#94a3b8" 
                           FontSize="14" TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,16,16">
                <Button x:Name="CancelBtn" Content="Cancel" Visibility="Collapsed" Click="Cancel_Click"
                        Width="80" Height="32" Margin="0,0,8,0" Background="#1a1a24" Foreground="#94a3b8"
                        BorderBrush="#ffffff15" BorderThickness="1" Cursor="Hand"/>
                <Button x:Name="NoBtn" Content="No" Visibility="Collapsed" Click="No_Click"
                        Width="80" Height="32" Margin="0,0,8,0" Background="#1a1a24" Foreground="#94a3b8"
                        BorderBrush="#ffffff15" BorderThickness="1" Cursor="Hand"/>
                <Button x:Name="YesBtn" Content="Yes" Visibility="Collapsed" Click="Yes_Click"
                        Width="80" Height="32" Margin="0,0,8,0" Background="#22c55e" Foreground="#050508"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"/>
                <Button x:Name="OkBtn" Content="OK" Click="Ok_Click"
                        Width="80" Height="32" Background="#22d3ee" Foreground="#050508"
                        BorderThickness="0" FontWeight="SemiBold" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
