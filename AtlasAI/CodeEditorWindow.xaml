<Window x:Class="AtlasAI.CodeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Code" Height="900" Width="1500"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#050508"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- Neon Futuristic Button Style -->
        <Style x:Key="NeonBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderBrush="#ffffff08" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1a1a24"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#22d3ee30"/>
                                <Setter Property="Foreground" Value="#22d3ee"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyan Accent Button -->
        <Style x:Key="CyanAccentBtn" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#22d3ee" Offset="0"/>
                        <GradientStop Color="#06b6d4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#050508"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#22d3ee" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#67e8f9" Offset="0"/>
                                            <GradientStop Color="#22d3ee" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Violet Accent Button -->
        <Style x:Key="VioletAccentBtn" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8b5cf6" Offset="0"/>
                        <GradientStop Color="#6366f1" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#8b5cf6" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#a78bfa" Offset="0"/>
                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabBtn" TargetType="Button">
            <Setter Property="Background" Value="#12121a"/>
            <Setter Property="Foreground" Value="#64748b"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#ffffff08" BorderThickness="0,0,1,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1a1a24"/>
                                <Setter Property="Foreground" Value="#f1f5f9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tree View Item Style -->
        <Style x:Key="NeonTreeItem" TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#22d3ee15"/>
                    <Setter Property="Foreground" Value="#22d3ee"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a24"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Bottom Panel Tab Style -->
        <Style x:Key="PanelTabBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748b"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1a1a24"/>
                                <Setter Property="Foreground" Value="#f1f5f9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Window Content -->
    <Border CornerRadius="12" BorderBrush="#ffffff10" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#050508" Offset="0"/>
                <GradientStop Color="#0a0a12" Offset="0.5"/>
                <GradientStop Color="#08080e" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 TOP HEADER BAR - Neon Futuristic Style
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" BorderBrush="#ffffff08" BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0c0c14" Offset="0"/>
                        <GradientStop Color="#10101a" Offset="0.5"/>
                        <GradientStop Color="#0c0c14" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Logo + File Actions -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Neon Logo -->
                        <Border Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš¡" FontSize="18" VerticalAlignment="Center" Margin="0,0,6,0">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#22d3ee" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="ATLAS CODE" FontSize="14" FontWeight="Bold" VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#22d3ee" Offset="0"/>
                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <Rectangle Width="1" Height="24" Fill="#ffffff10" Margin="0,0,12,0"/>
                        
                        <Button Content="ðŸ“‚ Open" Style="{StaticResource NeonBtn}" Click="OpenFolder_Click" ToolTip="Open Folder (Ctrl+O)"/>
                        <Button Content="ðŸ“„ New" Style="{StaticResource NeonBtn}" Click="NewFile_Click" ToolTip="New File (Ctrl+N)"/>
                        <Button Content="ðŸ’¾ Save" Style="{StaticResource NeonBtn}" Click="SaveFile_Click" ToolTip="Save (Ctrl+S)"/>
                        <Button Content="ðŸ’¾ Save All" Style="{StaticResource NeonBtn}" Click="SaveAll_Click" ToolTip="Save All (Ctrl+Shift+S)"/>
                    </StackPanel>

                    <!-- Center: Search Bar -->
                    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            CornerRadius="8" Width="420">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#12121a" Offset="0"/>
                                <GradientStop Color="#16161f" Offset="0.5"/>
                                <GradientStop Color="#12121a" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#22d3ee20" Offset="0"/>
                                <GradientStop Color="#8b5cf620" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        
                        <Grid>
                            <TextBlock Text="ðŸ” Search files, commands... (Ctrl+P)" Foreground="#475569" 
                                       FontSize="13" VerticalAlignment="Center" Margin="14,0"
                                       IsHitTestVisible="False" x:Name="SearchPlaceholder"/>
                            <TextBox x:Name="SearchBox" Background="Transparent" Foreground="#f1f5f9" 
                                     BorderThickness="0" Padding="14,10" FontSize="13"
                                     CaretBrush="#22d3ee" KeyDown="SearchBox_KeyDown"
                                     TextChanged="SearchBox_TextChanged"/>
                        </Grid>
                    </Border>
                    
                    <!-- Right: Run + Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="â–¶ Run" Style="{StaticResource CyanAccentBtn}" Click="RunCode_Click" ToolTip="Run Code (F5)"/>
                        <Button x:Name="TerminalToggle" Content="âŒ¨ Terminal" Style="{StaticResource NeonBtn}" Click="ToggleTerminal_Click" Margin="8,0,0,0"/>
                        
                        <Rectangle Width="1" Height="24" Fill="#ffffff10" Margin="16,0"/>
                        
                        <Button Content="â”€" Style="{StaticResource NeonBtn}" Click="Minimize_Click" Width="40" Padding="0,8"/>
                        <Button Content="â–¡" Style="{StaticResource NeonBtn}" Click="Maximize_Click" Width="40" Padding="0,8"/>
                        <Button x:Name="CloseBtn" Content="âœ•" Click="Close_Click" Width="40" Padding="0,8">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource NeonBtn}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#ef4444"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                 MAIN CONTENT AREA
            â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition x:Name="AIPanelColumn" Width="380" MinWidth="280"/>
                </Grid.ColumnDefinitions>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     LEFT SIDEBAR - File Explorer
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Background="#08080c" BorderBrush="#ffffff08" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Explorer Header -->
                        <Border Padding="16,12" BorderBrush="#ffffff08" BorderThickness="0,0,0,1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0c0c14" Offset="0"/>
                                    <GradientStop Color="#10101a" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <TextBlock x:Name="SidePanelTitle" Text="EXPLORER" FontSize="11" FontWeight="Bold" 
                                           Foreground="#64748b" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+" Style="{StaticResource NeonBtn}" Click="NewFile_Click" 
                                            ToolTip="New File" Padding="6,4" FontSize="14"/>
                                    <Button Content="âŸ³" Style="{StaticResource NeonBtn}" Click="RefreshTree_Click" 
                                            ToolTip="Refresh" Padding="6,4"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- File Tree -->
                        <TreeView x:Name="FileTree" Grid.Row="1" Background="Transparent" BorderThickness="0"
                                  ItemContainerStyle="{StaticResource NeonTreeItem}"
                                  SelectedItemChanged="FileTree_SelectedItemChanged"
                                  MouseDoubleClick="FileTree_MouseDoubleClick"
                                  Padding="8,8"/>
                    </Grid>
                </Border>
                
                <GridSplitter Grid.Column="1" Width="1" Background="#22d3ee20" HorizontalAlignment="Center"/>

                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     CENTER - Code Editor Area
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="BottomPanelRow" Height="0"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Tab Bar -->
                    <Border BorderBrush="#ffffff08" BorderThickness="0,0,0,1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0c0c14" Offset="0"/>
                                <GradientStop Color="#08080c" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <StackPanel x:Name="TabBar" Orientation="Horizontal"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Code Editor -->
                    <Border Grid.Row="1" Background="#050508">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Line Numbers -->
                            <Border Background="#08080c" BorderBrush="#ffffff08" BorderThickness="0,0,1,0">
                                <TextBox x:Name="LineNumbers" IsReadOnly="True" Background="Transparent" 
                                         Foreground="#475569" BorderThickness="0" 
                                         FontFamily="Cascadia Code, Consolas, monospace"
                                         FontSize="13" Padding="8,14" TextAlignment="Right"
                                         VerticalScrollBarVisibility="Hidden" Text="1"/>
                            </Border>
                            
                            <!-- Code Text Area -->
                            <TextBox x:Name="CodeEditor" Grid.Column="1" 
                                     AcceptsReturn="True" AcceptsTab="True"
                                     Background="Transparent" Foreground="#f1f5f9"
                                     BorderThickness="0" FontFamily="Cascadia Code, Consolas, monospace"
                                     FontSize="13" Padding="14"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     TextWrapping="NoWrap"
                                     CaretBrush="#22d3ee"
                                     SelectionBrush="#8b5cf640"
                                     TextChanged="CodeEditor_TextChanged"
                                     PreviewKeyDown="CodeEditor_PreviewKeyDown"/>
                            
                            <!-- Welcome Screen -->
                            <Border x:Name="WelcomeScreen" Grid.ColumnSpan="2" Background="#050508" Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,24">
                                        <TextBlock.Text>âš¡</TextBlock.Text>
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#22d3ee" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="ATLAS CODE" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#22d3ee" Offset="0"/>
                                                <GradientStop Color="#8b5cf6" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock Text="AI-Powered Code Editor" Foreground="#64748b" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,32"/>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="ðŸ“‚ Open Folder" Style="{StaticResource VioletAccentBtn}" Click="OpenFolder_Click" Margin="0,0,12,0"/>
                                        <Button Content="ðŸ“„ New File" Style="{StaticResource CyanAccentBtn}" Click="NewFile_Click"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="or drag &amp; drop a folder here" Foreground="#475569" FontSize="13" 
                                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- No File Message -->
                            <StackPanel x:Name="NoFileMessage" Grid.ColumnSpan="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="Collapsed">
                                <TextBlock Text="Select a file to edit" Foreground="#64748b" FontSize="15" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                         BOTTOM PANEL - Terminal / Problems / Output
                    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <Border x:Name="BottomPanel" Grid.Row="2" Visibility="Collapsed"
                            BorderBrush="#ffffff08" BorderThickness="0,1,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0a0a10" Offset="0"/>
                                <GradientStop Color="#08080c" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Panel Tabs -->
                            <Border Padding="12,6" BorderBrush="#ffffff08" BorderThickness="0,0,0,1">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="ProblemsTabBtn" Content="PROBLEMS" Style="{StaticResource PanelTabBtn}" 
                                                Click="ShowProblems_Click" Foreground="#64748b"/>
                                        <Button x:Name="OutputTabBtn" Content="OUTPUT" Style="{StaticResource PanelTabBtn}" 
                                                Click="ShowOutput_Click" Foreground="#64748b" Margin="8,0,0,0"/>
                                        <Button x:Name="TerminalTabBtn" Content="TERMINAL" Style="{StaticResource PanelTabBtn}" 
                                                Click="ShowTerminal_Click" Foreground="#22d3ee" Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="ðŸ—‘" Style="{StaticResource NeonBtn}" Click="ClearTerminal_Click" 
                                                ToolTip="Clear" Padding="6,4"/>
                                        <Button Content="âœ•" Style="{StaticResource NeonBtn}" Click="CloseTerminal_Click" 
                                                ToolTip="Close Panel" Padding="6,4"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Problems Panel -->
                            <Border x:Name="ProblemsPanel" Grid.Row="1" Visibility="Collapsed">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ProblemsList" Margin="12"/>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Output Panel -->
