<Window x:Class="MinimalApp.AvatarSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Avatar Selection - Ready Player Me" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize" ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- 3D Pill Button Style -->
        <Style x:Key="Pill3DBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#454570" Offset="0"/>
                                    <GradientStop Color="#353555" Offset="0.5"/>
                                    <GradientStop Color="#2a2a45" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#606090" Offset="0"/>
                                    <GradientStop Color="#404060" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.BorderThickness>
                                <Thickness>1</Thickness>
                            </Border.BorderThickness>
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3" Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#7c7ff7" Offset="0"/>
                                            <GradientStop Color="#6366f1" Offset="0.5"/>
                                            <GradientStop Color="#5558e8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Avatar Card Style -->
        <Style x:Key="AvatarCard" TargetType="Border">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#6366f1"/>
                    <Setter Property="Background" Value="#2a2a50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252542" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="ðŸŽ­ Avatar Selection" FontSize="24" FontWeight="Bold" Foreground="#f0f0f0"/>
                    <TextBlock Text="Choose your Ready Player Me avatar for Atlas AI" FontSize="14" Foreground="#a0a0b0" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âž• Add Avatar" Style="{StaticResource Pill3DBtn}" Click="AddAvatar_Click" Margin="0,0,10,0"/>
                    <Button Content="ðŸ”„ Refresh" Style="{StaticResource Pill3DBtn}" Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Avatar Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <ItemsControl x:Name="AvatarGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource AvatarCard}" Width="200" Height="280" MouseLeftButtonDown="Avatar_Click" Tag="{Binding Name}">
                            <StackPanel>
                                <!-- Avatar Preview -->
                                <Border Width="150" Height="150" CornerRadius="75" Background="#1a1a2e" Margin="0,0,0,15">
                                    <Border x:Name="AvatarPreview" Width="140" Height="140" CornerRadius="70" Background="#6366f1">
                                        <TextBlock Text="{Binding Emoji}" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Border>
                                
                                <!-- Avatar Info -->
                                <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" Foreground="#f0f0f0" 
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#a0a0b0" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                
                                <!-- Status -->
                                <Border Background="#10b98120" CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#10b981"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#1e1e3a" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¡ Tip: " FontWeight="SemiBold" Foreground="#6366f1" VerticalAlignment="Center"/>
                    <TextBlock Text="Get your Ready Player Me avatar at readyplayer.me" Foreground="#a0a0b0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel" Style="{StaticResource Pill3DBtn}" Click="Cancel_Click" Margin="0,0,10,0"/>
                    <Button x:Name="SelectButton" Content="Select Avatar" Style="{StaticResource Pill3DBtn}" Click="Select_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>