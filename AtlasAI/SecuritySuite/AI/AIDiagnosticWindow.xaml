<Window x:Class="AtlasAI.SecuritySuite.AI.AIDiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas AI Security Agent"
        Width="900" Height="850"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border CornerRadius="16" Background="#0A0C14" BorderThickness="1" BorderBrush="#4D22D3EE">
        <Border.Effect>
            <DropShadowEffect Color="#22D3EE" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <!-- Header -->
            <Border Height="50" VerticalAlignment="Top" Background="#CC0A0C14" 
                    BorderBrush="#4D22D3EE" BorderThickness="0,0,0,1" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown" CornerRadius="16,16,0,0">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="◆" Foreground="#22D3EE" FontSize="12" Margin="0,0,10,0"/>
                        <TextBlock Text="ATLAS AI SECURITY AGENT" Foreground="#22D3EE" 
                                   FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Text="◆" Foreground="#22D3EE" FontSize="12" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Background="#1A22C55E" BorderBrush="#4D22C55E" BorderThickness="1" 
                                CornerRadius="12" Padding="10,4" Margin="0,0,12,0">
                            <TextBlock x:Name="ThreatLevel" Text="SECURE" Foreground="#22C55E" FontSize="10"/>
                        </Border>
                        <Button Click="CloseBtn_Click" Width="28" Height="28" Background="Transparent" 
                                BorderThickness="0" Cursor="Hand" Content="✕" Foreground="#22D3EE"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Scanner Area with Orbiting Icons -->
            <Canvas x:Name="MainCanvas" Margin="0,50,0,100"/>
            
            <!-- Status Bar -->
            <Border Height="100" VerticalAlignment="Bottom" Background="#CC0A0C14" 
                    BorderBrush="#4D22D3EE" BorderThickness="0,1,0,0" CornerRadius="0,0,16,16">
                <Grid Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Scan Results -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                        <TextBlock x:Name="ScanResults" Foreground="#94a3b8" FontSize="12"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                    
                    <!-- Progress -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ProgressBar x:Name="ScanProgress" Height="4" Background="#1A22D3EE" 
                                     Foreground="#22D3EE" Value="0" Maximum="100"/>
                        <TextBlock x:Name="ProgressText" Grid.Column="1" Text="Ready" 
                                   Foreground="#22D3EE" FontSize="10" Margin="12,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
