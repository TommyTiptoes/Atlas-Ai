<UserControl x:Class="AtlasAI.Controls.StatusPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="240">
    
    <UserControl.Resources>
        <!-- Status Card Style with Corner Brackets -->
        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="Background" Value="#0affffff"/>
            <Setter Property="BorderBrush" Value="#15ffffff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- Progress Bar Style -->
        <Style x:Key="NeuralProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="#10ffffff"/>
            <Setter Property="Foreground" Value="#22d3ee"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                            <Border x:Name="PART_Track" CornerRadius="3"/>
                            <Border x:Name="PART_Indicator" HorizontalAlignment="Left" CornerRadius="3">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#22d3ee" Offset="0"/>
                                        <GradientStop Color="#8b5cf6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Quick Action Button -->
        <Style x:Key="QuickActionBtn" TargetType="Button">
            <Setter Property="Background" Value="#08ffffff"/>
            <Setter Property="Foreground" Value="#f1f5f9"/>
            <Setter Property="BorderBrush" Value="#10ffffff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#158b5cf6"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#308b5cf6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#400c0c12" BorderBrush="#08ffffff" BorderThickness="1,0,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
            <StackPanel>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     NEURAL CORE STATUS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Style="{StaticResource StatusCard}">
                    <!-- Corner brackets -->
                    <Border.Resources>
                        <Style TargetType="Border" x:Key="CornerBracket">
                            <Setter Property="Width" Value="10"/>
                            <Setter Property="Height" Value="10"/>
                        </Style>
                    </Border.Resources>
                    
                    <Grid>
                        <!-- Top-left bracket -->
                        <Border Width="10" Height="10" BorderThickness="2,2,0,0" BorderBrush="#4022d3ee"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-12,-12,0,0"/>
                        <!-- Top-right bracket -->
                        <Border Width="10" Height="10" BorderThickness="0,2,2,0" BorderBrush="#408b5cf6"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-12,-12,0"/>
                        
                        <StackPanel>
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="ðŸ’»" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="SYSTEM" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                            
                            <!-- CPU Usage -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="CPU" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="ProcessingValue" Grid.Column="1" Text="0%" 
                                           FontSize="11" Foreground="#22d3ee" FontFamily="Consolas"/>
                            </Grid>
                            <ProgressBar x:Name="ProcessingBar" Value="0" Maximum="100" 
                                         Style="{StaticResource NeuralProgressBar}" Margin="0,0,0,12"/>
                            
                            <!-- RAM Usage -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="RAM" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="CapacityValue" Grid.Column="1" Text="0%" 
                                           FontSize="11" Foreground="#8b5cf6" FontFamily="Consolas"/>
                            </Grid>
                            <ProgressBar x:Name="CapacityBar" Value="68" Maximum="100">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar" BasedOn="{StaticResource NeuralProgressBar}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ProgressBar">
                                                    <Grid>
                                                        <Border Background="#10ffffff" CornerRadius="3"/>
                                                        <Border x:Name="PART_Track" CornerRadius="3"/>
                                                        <Border x:Name="PART_Indicator" HorizontalAlignment="Left" CornerRadius="3">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#8b5cf6" Offset="0"/>
                                                                    <GradientStop Color="#a855f7" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     AI STATUS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Style="{StaticResource StatusCard}">
                    <Grid>
                        <!-- Corner brackets -->
                        <Border Width="10" Height="10" BorderThickness="2,2,0,0" BorderBrush="#4022d3ee"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-12,-12,0,0"/>
                        <Border Width="10" Height="10" BorderThickness="0,2,2,0" BorderBrush="#408b5cf6"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-12,-12,0"/>
                        
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="AI STATUS" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                            
                            <!-- State -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="State" FontSize="11" Foreground="#94a3b8"/>
                                <Border Grid.Column="1" Background="#2022c55e" BorderBrush="#4022c55e" 
                                        BorderThickness="1" CornerRadius="4" Padding="8,2">
                                    <TextBlock x:Name="StateValue" Text="ACTIVE" FontSize="10" 
                                               Foreground="#22c55e" FontFamily="Consolas"/>
                                </Border>
                            </Grid>
                            
                            <!-- Model -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Model" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="ModelValue" Grid.Column="1" Text="Claude 3.5" 
                                           FontSize="11" Foreground="#f1f5f9" FontFamily="Consolas"/>
                            </Grid>
                            
                            <!-- Uptime -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Uptime" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="UptimeValue" Grid.Column="1" Text="47h 23m" 
                                           FontSize="11" Foreground="#22d3ee" FontFamily="Consolas"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     ACTIVE TOOLS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Style="{StaticResource StatusCard}">
                    <Grid>
                        <Border Width="10" Height="10" BorderThickness="2,2,0,0" BorderBrush="#4022d3ee"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-12,-12,0,0"/>
                        <Border Width="10" Height="10" BorderThickness="0,2,2,0" BorderBrush="#408b5cf6"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-12,-12,0"/>
                        
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="âš™" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="ACTIVE TOOLS" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                            
                            <ItemsControl x:Name="ActiveToolsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#08ffffff" BorderBrush="#10ffffff" BorderThickness="1"
                                                CornerRadius="6" Padding="10,8" Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="{Binding Name}" FontSize="11" Foreground="#f1f5f9"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat={}{0}%}" 
                                                           FontSize="10" Foreground="#64748b" FontFamily="Consolas"/>
                                                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Value="{Binding Progress}" 
                                                             Maximum="100" Height="4" Margin="0,6,0,0"
                                                             Style="{StaticResource NeuralProgressBar}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     NETWORK STATUS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Style="{StaticResource StatusCard}">
                    <Grid>
                        <Border Width="10" Height="10" BorderThickness="2,2,0,0" BorderBrush="#4022d3ee"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-12,-12,0,0"/>
                        <Border Width="10" Height="10" BorderThickness="0,2,2,0" BorderBrush="#408b5cf6"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-12,-12,0"/>
                        
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="ðŸ“¡" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="NETWORK" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                            
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Latency" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="LatencyValue" Grid.Column="1" Text="12ms" 
                                           FontSize="11" Foreground="#22c55e" FontFamily="Consolas"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Bandwidth" FontSize="11" Foreground="#94a3b8"/>
                                <TextBlock x:Name="BandwidthValue" Grid.Column="1" Text="847 Mbps" 
                                           FontSize="11" Foreground="#22d3ee" FontFamily="Consolas"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Security" FontSize="11" Foreground="#94a3b8"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”’" FontSize="10" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="SecurityValue" Text="Encrypted" 
                                               FontSize="11" Foreground="#22c55e"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                     QUICK ACTIONS
                â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Style="{StaticResource StatusCard}">
                    <Grid>
                        <Border Width="10" Height="10" BorderThickness="2,2,0,0" BorderBrush="#4022d3ee"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-12,-12,0,0"/>
                        <Border Width="10" Height="10" BorderThickness="0,2,2,0" BorderBrush="#408b5cf6"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-12,-12,0"/>
                        
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                            
                            <Button Content="System Scan" Style="{StaticResource QuickActionBtn}" 
                                    Click="QuickAction_Click" Tag="scan" Margin="0,0,0,6"/>
                            <Button Content="Optimize" Style="{StaticResource QuickActionBtn}" 
                                    Click="QuickAction_Click" Tag="optimize" Margin="0,0,0,6"/>
                            <Button Content="Export Data" Style="{StaticResource QuickActionBtn}" 
                                    Click="QuickAction_Click" Tag="export" Margin="0,0,0,6"/>
                            <Button Content="Clear Cache" Style="{StaticResource QuickActionBtn}" 
                                    Click="QuickAction_Click" Tag="cache"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
