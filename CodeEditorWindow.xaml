<Window x:Class="AtlasAI.CodeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Code" Height="900" Width="1500"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0d1117"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- Kiro-style toolbar button -->
        <Style x:Key="ToolBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8b949e"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#21262d"/>
                                <Setter Property="Foreground" Value="#e6edf3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Accent button (Run, Send) -->
        <Style x:Key="AccentBtn" TargetType="Button">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2ea043"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tree view item style -->
        <Style x:Key="TreeItemStyle" TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#c9d1d9"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,1"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1f6feb30"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#21262d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="10" Background="#0d1117" BorderBrush="#30363d" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>
            
            <!-- Top Header Bar - Kiro style -->
            <Border Grid.Row="0" Background="#161b22" BorderBrush="#30363d" BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Logo + Actions -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Atlas Code" FontSize="15" FontWeight="SemiBold" Foreground="#e6edf3" 
                                   VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <Button Content="ðŸ“‚ Open Folder" Style="{StaticResource ToolBtn}" Click="OpenFolder_Click"/>
                        <Button Content="ðŸ“„ New File" Style="{StaticResource ToolBtn}" Click="NewFile_Click"/>
                        <Button Content="ðŸ’¾ Save" Style="{StaticResource ToolBtn}" Click="SaveFile_Click"/>
                        <Button Content="ðŸ’¾ Save As" Style="{StaticResource ToolBtn}" Click="SaveAs_Click"/>
                        <Button Content="ðŸ’¾ Save All" Style="{StaticResource ToolBtn}" Click="SaveAll_Click"/>
                    </StackPanel>
                    
                    <!-- Center: Search -->
                    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Background="#0d1117" BorderBrush="#30363d" BorderThickness="1" CornerRadius="6"
                            Width="400">
                        <TextBox x:Name="SearchBox" Background="Transparent" Foreground="#c9d1d9" 
                                 BorderThickness="0" Padding="12,8" FontSize="13"
                                 CaretBrush="#58a6ff" KeyDown="SearchBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="ðŸ” Search files... (Ctrl+P)" Foreground="#484f58" Margin="12,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                    
                    <!-- Right: Run + Window controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="â–¶ Run" Style="{StaticResource AccentBtn}" Click="RunCode_Click"/>
                        <Button x:Name="TerminalToggle" Content="âŒ¨ Terminal" Style="{StaticResource ToolBtn}" Click="ToggleTerminal_Click" Margin="8,0,0,0"/>
                        <Rectangle Width="1" Height="20" Fill="#30363d" Margin="12,0"/>
                        <Button Content="â”€" Style="{StaticResource ToolBtn}" Click="Minimize_Click" Width="36"/>
                        <Button Content="â–¡" Style="{StaticResource ToolBtn}" Click="Maximize_Click" Width="36"/>
                        <Button Content="âœ•" Style="{StaticResource ToolBtn}" Click="Close_Click" Width="36"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" MinWidth="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition x:Name="AIPanelColumn" Width="340" MinWidth="250"/>
                </Grid.ColumnDefinitions>
                
                <!-- File Explorer - Kiro style -->
                <Border Background="#0d1117" BorderBrush="#30363d" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#161b22" Padding="12,10" BorderBrush="#30363d" BorderThickness="0,0,0,1">
                            <Grid>
                                <TextBlock x:Name="WorkspaceLabel" Text="EXPLORER" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="#8b949e" VerticalAlignment="Center"/>
                                <Button Content="âŸ³" Style="{StaticResource ToolBtn}" HorizontalAlignment="Right" 
                                        Click="RefreshTree_Click" ToolTip="Refresh" Padding="6,4"/>
                            </Grid>
                        </Border>
                        
                        <TreeView x:Name="FileTree" Grid.Row="1" Background="Transparent" BorderThickness="0"
                                  ItemContainerStyle="{StaticResource TreeItemStyle}"
                                  SelectedItemChanged="FileTree_SelectedItemChanged"
                                  MouseDoubleClick="FileTree_MouseDoubleClick"
                                  Padding="8,4"/>
                    </Grid>
                </Border>
                
                <GridSplitter Grid.Column="1" Width="1" Background="#30363d" HorizontalAlignment="Center"/>
                
                <!-- Editor Area -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition x:Name="TerminalRow" Height="0"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Tabs -->
                    <Border Background="#161b22" BorderBrush="#30363d" BorderThickness="0,0,0,1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <StackPanel x:Name="TabBar" Orientation="Horizontal" Margin="4,0"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Code Editor - Kiro style -->
                    <Border Grid.Row="1" Background="#0d1117">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Line numbers -->
                            <Border Background="#0d1117" BorderBrush="#21262d" BorderThickness="0,0,1,0">
                                <TextBox x:Name="LineNumbers" IsReadOnly="True" Background="Transparent" 
                                         Foreground="#484f58" BorderThickness="0" FontFamily="Cascadia Code, Consolas, monospace"
                                         FontSize="14" Padding="8,12" TextAlignment="Right"
                                         VerticalScrollBarVisibility="Hidden" Text="1"/>
                            </Border>
                            
                            <!-- Code text -->
                            <TextBox x:Name="CodeEditor" Grid.Column="1" 
                                     AcceptsReturn="True" AcceptsTab="True"
                                     Background="Transparent" Foreground="#c9d1d9"
                                     BorderThickness="0" FontFamily="Cascadia Code, Consolas, monospace"
                                     FontSize="14" Padding="12"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     TextWrapping="NoWrap"
                                     CaretBrush="#58a6ff"
                                     SelectionBrush="#1f6feb60"
                                     TextChanged="CodeEditor_TextChanged"
                                     PreviewKeyDown="CodeEditor_PreviewKeyDown"/>
                            
                            <!-- No file open message -->
                            <StackPanel x:Name="NoFileMessage" Grid.ColumnSpan="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="Visible">
                                <TextBlock Text="Open a folder or file to start coding" 
                                           Foreground="#8b949e" FontSize="16" TextAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="ðŸ“‚ Drag &amp; drop a folder here" 
                                           Foreground="#484f58" FontSize="14" TextAlignment="Center"/>
                                <TextBlock Text="or use Open Folder button" 
                                           Foreground="#484f58" FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Terminal Panel -->
                    <Border x:Name="TerminalPanel" Grid.Row="2" Background="#0d1117" Visibility="Collapsed"
                            BorderBrush="#30363d" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Terminal Header -->
                            <Border Background="#161b22" Padding="12,8">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="TERMINAL" FontSize="11" FontWeight="SemiBold" Foreground="#8b949e" 
                                                   VerticalAlignment="Center"/>
                                        <Border Background="#21262d" CornerRadius="4" Padding="8,3" Margin="12,0,0,0">
                                            <TextBlock x:Name="TerminalShellLabel" Text="PowerShell" FontSize="11" Foreground="#8b949e"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="ðŸ—‘" Style="{StaticResource ToolBtn}" Click="ClearTerminal_Click" ToolTip="Clear" Padding="6,4"/>
                                        <Button Content="âœ•" Style="{StaticResource ToolBtn}" Click="CloseTerminal_Click" ToolTip="Close" Padding="6,4"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Terminal Output -->
                            <Border Grid.Row="1" Background="#0d1117">
                                <RichTextBox x:Name="TerminalRichOutput" IsReadOnly="True"
                                             Background="Transparent" Foreground="#c9d1d9"
                                             BorderThickness="0" FontFamily="Cascadia Code, Consolas, monospace"
                                             FontSize="13" Padding="12,8"
                                             VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Auto"
                                             IsDocumentEnabled="True">
                                    <RichTextBox.Resources>
                                        <Style TargetType="Paragraph">
                                            <Setter Property="Margin" Value="0,2"/>
                                        </Style>
                                    </RichTextBox.Resources>
                                </RichTextBox>
                            </Border>
                            
                            <!-- Terminal Input -->
                            <Border Grid.Row="2" Background="#161b22" Padding="12,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="TerminalPromptDir" Text="~" Foreground="#3fb950" 
                                                   FontFamily="Cascadia Code, Consolas" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text=" â¯ " Foreground="#58a6ff" FontFamily="Cascadia Code, Consolas" FontSize="13"/>
                                    </StackPanel>
                                    
                                    <TextBox x:Name="TerminalInput" Grid.Column="1" Background="Transparent" 
                                             Foreground="#c9d1d9" BorderThickness="0" FontFamily="Cascadia Code, Consolas"
                                             FontSize="13" CaretBrush="#58a6ff" VerticalAlignment="Center"
                                             PreviewKeyDown="TerminalInput_PreviewKeyDown"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <GridSplitter x:Name="TerminalSplitter" Grid.Row="2" Height="1" Background="#30363d" 
                                  VerticalAlignment="Top" HorizontalAlignment="Stretch" Visibility="Collapsed"/>
                </Grid>
                
                <GridSplitter Grid.Column="3" Width="1" Background="#30363d" HorizontalAlignment="Center"/>
                
                <!-- AI Assistant Panel - Kiro style -->
                <Border Grid.Column="4" Background="#0d1117" BorderBrush="#30363d" BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#161b22" Padding="14,12" BorderBrush="#30363d" BorderThickness="0,0,0,1">
                            <Grid>
                                <TextBlock Text="ðŸ¤– AI ASSISTANT" FontSize="13" FontWeight="SemiBold" Foreground="#e6edf3"/>
                                <Button Content="ðŸ—‘" Style="{StaticResource ToolBtn}" HorizontalAlignment="Right" 
                                        Click="ClearChat_Click" ToolTip="Clear chat" Padding="6,4"/>
                            </Grid>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="AIChat" Margin="16">
                                <TextBlock Text="I can help you with:" Foreground="#e6edf3" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                                <TextBlock Text="â€¢ Explain code and concepts" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <TextBlock Text="â€¢ Find and fix bugs" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <TextBlock Text="â€¢ Refactor and optimize" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <TextBlock Text="â€¢ Write new functions" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <TextBlock Text="â€¢ Add documentation" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <TextBlock Text="â€¢ Convert between languages" Foreground="#c9d1d9" FontSize="15" Margin="0,6"/>
                                <Border Background="#238636" CornerRadius="8" Padding="14,12" Margin="0,20,0,0">
                                    <TextBlock Text="ðŸ’¡ Drop a folder to enable full workspace access!" 
                                               Foreground="White" FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" Background="#161b22" Padding="14" BorderBrush="#30363d" BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Background="#0d1117" BorderBrush="#30363d" BorderThickness="1" CornerRadius="8">
                                    <TextBox x:Name="AIInput" Background="Transparent" Foreground="#e6edf3"
                                             BorderThickness="0" Padding="14,12"
                                             FontSize="15" AcceptsReturn="False" TextWrapping="Wrap"
                                             MaxHeight="120" VerticalScrollBarVisibility="Auto"
                                             CaretBrush="#58a6ff"
                                             PreviewKeyDown="AIInput_KeyDown">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Top">
                                                                    <VisualBrush.Visual>
                                                                        <TextBlock Text="Ask me anything about your code..." Foreground="#6e7681" FontSize="15" Margin="14,12"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                                    <Button Content="ðŸ“Ž Add File" Style="{StaticResource ToolBtn}" Click="AttachFile_Click" FontSize="14"/>
                                    <Button Content="â–¶ Send" Style="{StaticResource AccentBtn}" Click="SendAI_Click" Margin="8,0,0,0" FontSize="14"/>
                                    <Button Content="âœ¨ Apply" Style="{StaticResource AccentBtn}" Click="ApplyChanges_Click" 
                                            Margin="8,0,0,0" x:Name="ApplyBtn" Visibility="Collapsed" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Status Bar - Kiro style -->
            <Border Grid.Row="2" Background="#161b22" BorderBrush="#30363d" BorderThickness="0,1,0,0" Padding="12,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="StatusText" Text="Ready" Foreground="#8b949e" FontSize="12"/>
                    <TextBlock x:Name="CursorPosition" Grid.Column="1" Text="Ln 1, Col 1" Foreground="#484f58" FontSize="12" Margin="20,0"/>
                    <TextBlock x:Name="LanguageLabel" Grid.Column="2" Text="C#" Foreground="#58a6ff" FontSize="12" Margin="20,0"/>
                    <TextBlock x:Name="EncodingLabel" Grid.Column="3" Text="UTF-8" Foreground="#484f58" FontSize="12"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

