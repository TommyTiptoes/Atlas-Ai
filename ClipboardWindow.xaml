<Window x:Class="MinimalApp.ClipboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clipboard Manager" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E" ShowInTaskbar="False">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF007ACC" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="ðŸ“‹ Clipboard Manager" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="ItemCountLabel" Text="0 items" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸" Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="14" Cursor="Hand" Click="ClearHistory_Click" ToolTip="Clear All"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Box -->
        <Border Grid.Row="1" Background="#FF2D2D30" CornerRadius="5" Padding="8" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ”" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="SearchBox" Grid.Column="1" 
                         Background="Transparent" Foreground="White" BorderThickness="0"
                         FontSize="14" VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged" 
                         Text="Search clipboard history..."/>
            </Grid>
        </Border>

        <!-- Clipboard Items List -->
        <Border Grid.Row="2" Background="#FF2D2D30" CornerRadius="5" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ClipboardItemsPanel" Margin="10"/>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FF252526" CornerRadius="5" Padding="8">
            <TextBlock x:Name="StatusLabel" Text="Clipboard monitoring active" 
                       Foreground="#FF888888" FontSize="11"/>
        </Border>
    </Grid>
</Window>