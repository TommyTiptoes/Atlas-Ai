<Window x:Class="MinimalApp.Integrations.IntegrationHubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ”Œ Atlas Integration Hub" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1A1A1E" ShowInTaskbar="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF252530" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="ðŸ”Œ Integration Hub" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="SummaryText" Text="Loading integrations..." 
                               Foreground="#FF888888" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="ðŸ”„ Refresh" Width="100" Height="32"
                        Background="#FF3C3C46" Foreground="White" BorderThickness="0"
                        Click="Refresh_Click" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Category Filter -->
        <Border Grid.Row="1" Background="#FF1E1E24" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter:" Foreground="#FF888888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CategoryFilter" Width="150" Background="#FF3C3C46" Foreground="White"
                          SelectionChanged="CategoryFilter_Changed">
                    <ComboBoxItem Content="All Integrations" Tag="all" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸŽµ Music" Tag="Music"/>
                    <ComboBoxItem Content="ðŸŽ¨ Design" Tag="Design"/>
                    <ComboBoxItem Content="ðŸ“ Productivity" Tag="Productivity"/>
                    <ComboBoxItem Content="âš™ï¸ System" Tag="System"/>
                    <ComboBoxItem Content="ðŸ” Web" Tag="Web"/>
                    <ComboBoxItem Content="ðŸ¤– AI" Tag="AI"/>
                    <ComboBoxItem Content="ðŸ’¬ Communication" Tag="Communication"/>
                    <ComboBoxItem Content="ðŸ™ Development" Tag="Development"/>
                    <ComboBoxItem Content="ðŸ  Smart Home" Tag="SmartHome"/>
                </ComboBox>
                
                <CheckBox x:Name="ShowConfiguredOnly" Content="Show configured only" 
                          Foreground="White" Margin="20,0,0,0" VerticalAlignment="Center"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                
                <CheckBox x:Name="ShowComingSoon" Content="Show coming soon" 
                          Foreground="White" Margin="20,0,0,0" VerticalAlignment="Center"
                          IsChecked="True" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
            </StackPanel>
        </Border>

        <!-- Integration List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="15">
            <ItemsControl x:Name="IntegrationsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FF252530" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <TextBlock Text="{Binding Icon}" FontSize="28" VerticalAlignment="Center"/>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" Margin="10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                        <Border Background="{Binding StatusColor}" CornerRadius="3" Padding="6,2" Margin="10,0,0,0"
                                                Visibility="{Binding StatusBadgeVisibility}">
                                            <TextBlock Text="{Binding StatusText}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" Foreground="#FF888888" FontSize="12" Margin="0,3,0,0"/>
                                    
                                    <!-- Capabilities -->
                                    <ItemsControl ItemsSource="{Binding CapabilitiesList}" Margin="0,8,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FF3C3C46" CornerRadius="3" Padding="6,3" Margin="0,0,5,5">
                                                    <TextBlock Text="{Binding}" FontSize="10" Foreground="#FFAAAAAA"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Example Commands -->
                                    <TextBlock Text="{Binding ExampleText}" Foreground="#FF6B8AFF" FontSize="11" 
                                               Margin="0,5,0,0" FontStyle="Italic"
                                               Visibility="{Binding ExampleVisibility}"/>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Border Background="{Binding ConfigStatusColor}" CornerRadius="3" Padding="8,4" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding ConfigStatusText}" FontSize="11" Foreground="White" TextAlignment="Center"/>
                                    </Border>
                                    <Button Content="{Binding ActionButtonText}" Width="100" Height="28"
                                            Background="#FF007ACC" Foreground="White" BorderThickness="0"
                                            Tag="{Binding Id}" Click="Configure_Click"
                                            Visibility="{Binding ActionButtonVisibility}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
