<Window x:Class="MinimalApp.InAppAssistant.AtlasOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas Assistant"
        Width="320" Height="180"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Border Background="#E6161B22" CornerRadius="12" BorderBrush="#40FFFFFF" BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with app context -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Avatar/Status indicator -->
                <Ellipse Grid.Column="0" Width="32" Height="32" Margin="0,0,8,0">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF6366F1" Offset="0"/>
                            <GradientStop Color="#FF8B5CF6" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock x:Name="AvatarIcon" Grid.Column="0" Text="ðŸ¤–" FontSize="18" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Active app info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ActiveAppText" Text="No app focused" 
                               Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock x:Name="WindowTitleText" Text="" 
                               Foreground="#80FFFFFF" FontSize="10" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <!-- Close button -->
                <Button Grid.Column="2" Content="âœ•" Width="24" Height="24"
                        Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                        Click="Close_Click" Cursor="Hand" FontSize="12"/>
            </Grid>
            
            <!-- Mic status -->
            <Border Grid.Row="1" Background="#20FFFFFF" CornerRadius="6" Padding="8,4" Margin="0,8,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="MicIcon" Text="ðŸŽ¤" FontSize="14" Margin="0,0,6,0"/>
                    <TextBlock x:Name="MicStatusText" Text="Say 'Atlas' or press Ctrl+Alt+A" 
                               Foreground="#B0FFFFFF" FontSize="11"/>
                </StackPanel>
            </Border>
            
            <!-- Quick actions -->
            <WrapPanel Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button x:Name="VoiceBtn" Content="ðŸŽ™ï¸ Voice" Style="{StaticResource QuickActionButton}"
                        Click="Voice_Click" ToolTip="Start voice command"/>
                <Button x:Name="CaptureBtn" Content="ðŸ“‹ Capture" Style="{StaticResource QuickActionButton}"
                        Click="Capture_Click" ToolTip="Capture selected text"/>
                <Button x:Name="ActionsBtn" Content="âš¡ Actions" Style="{StaticResource QuickActionButton}"
                        Click="Actions_Click" ToolTip="Show available actions"/>
            </WrapPanel>
            
            <!-- Footer -->
            <TextBlock Grid.Row="3" Text="Ctrl+Alt+A to toggle â€¢ Drag to move" 
                       Foreground="#60FFFFFF" FontSize="9" HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </Grid>
    </Border>
    
    <Window.Resources>
        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
